@model List<MyWebApp.Models.Announcement>
@{
    ViewData["Title"] = "Home";
}
<h1 class="mb-4"></h1>
<p class="mb-5"></p>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="bg-image-card">
            <div class="overlay">
                <h5 class="card-title">📢 Announcements</h5>
                <a href="/Home/Announcements" class="btn btn-light btn-sm">Read More</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="bg-image-card">
            <div class="overlay">
                <h5 class="card-title">📝 Discussions</h5>
                <a href="/Home/Discussions" class="btn btn-light btn-sm">Join Now</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="bg-image-card">
            <div class="overlay">
                <h5 class="card-title">🔧 Municipal Services</h5>
                <a href="/Home/Services" class="btn btn-light btn-sm">Explore Services</a>
            </div>
        </div>
    </div>
</div>
<h2 class="mt-5 mb-3">🆕 Latest Announcements</h2>

@if (Model != null && Model.Any())
{
    <div class="list-group mb-5">
        @foreach (var announcement in Model)
        {
            <div class="list-group-item">
                <h5 class="mb-1">@announcement.Title</h5>
                <p class="mb-1">@announcement.Message</p>
            </div>
        }
    </div>
}
else
{
    <p>No announcements available.</p>
}
<div style="
    background-image: url('/images/Singha-Durbar_20200727162109.jpg');
    background-size: cover;
    background-position: center;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
">
    </div>
</div>

