@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Rendering
@using MyWebApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <span class="nav-link">Hello, @UserManager.GetUserName(User)!</span>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" id="logoutForm" class="navbar-right">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-link nav-link">Logout</button>
    </form>
}
else
{
    <a class="nav-link text-dark" href="/Identity/Account/Login">User Login</a>
    <a class="nav-link text-dark" href="/Identity/Account/Register">User Register</a>
}